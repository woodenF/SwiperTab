.refresh{
  height: 90rpx;
  display: flex;
  align-items: center;
  background: #ddd;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
}
.loadmore{
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ddd;
  color: #fff;
  font-size: 24rpx;
}
.movable-area {
  width: 100%;
  height: 100vh; 
}

.scroll {
  width: 100%;
  height: calc(100vh + 90rpx); 
}
.scroll__view {
  height: 100%;
  position: relative;
  box-sizing: border-box; 
}